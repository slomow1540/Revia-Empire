<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- not really blue , i just lazy to change the name -->
    <DamageDef>
        <defName>RE_IncineratedBomb</defName>
        <label>Incineratedbomb</label>
        <workerClass>DamageWorker_AddInjury</workerClass>
        <externalViolence>true</externalViolence>
        <isExplosive>true</isExplosive>
        <deathMessage>{0} has died in an explosion.</deathMessage>
        <hediff>Shredded</hediff>
        <hediffSolid>Crack</hediffSolid>
        <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
        <impactSoundType>Blunt</impactSoundType>
        <armorCategory>Sharp</armorCategory>
        <minDamageToFragment>20</minDamageToFragment>
        <defaultDamage>40</defaultDamage>
        <defaultStoppingPower>0.8</defaultStoppingPower>
        <defaultArmorPenetration>0.30</defaultArmorPenetration>
        <buildingDamageFactorImpassable>15</buildingDamageFactorImpassable>
        <buildingDamageFactorPassable>4</buildingDamageFactorPassable>
        <plantDamageFactor>2</plantDamageFactor>
        <explosionAffectOutsidePartsOnly>false</explosionAffectOutsidePartsOnly>
        <explosionHeatEnergyPerCell>5</explosionHeatEnergyPerCell>
        <explosionCellFleck>BlastDry</explosionCellFleck>
        <explosionColorCenter>(0.96, 0.17, 0.17)</explosionColorCenter>
        <explosionColorEdge>(0.9, 0.72, 0.41)</explosionColorEdge>
        <soundExplosion>RE_BreacherExplosion</soundExplosion>
        <combatLogRules>Damage_Bomb</combatLogRules>
    </DamageDef>
</Defs>