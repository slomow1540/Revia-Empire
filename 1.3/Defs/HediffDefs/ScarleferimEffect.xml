<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffDef>
    <defName>RE_ScarleferimInjection</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>High on Scarleferim</label>
    <description>A strange, almost rabid bloodthirst grips this person.</description>
    <defaultLabelColor>(0.9,0.1,0.1)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_HealPermanentWounds"/>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.75</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <painFactor>0.01</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.80</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>1.00</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.90</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.3</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.40</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.6</offset>
          </li>
          <li>
            <capacity>Hearing</capacity>
            <offset>0.8</offset>
          </li>
          <li>
            <capacity>Eating</capacity>
            <offset>0.2</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.4</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>0.6</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  <ThoughtDef>
    <defName>RE_ScarleferimHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>RE_ScarleferimInjection</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>high on Scarleferim</label>
        <description>POWER OVERWHELMING!!!.</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>